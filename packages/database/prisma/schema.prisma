generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["fumimi_channel"]
}

// =============================
// モデル設計 (匿名掲示板)
// ルーティング仕様: apps/backend/src/routing.md を基礎に定義
// 匿名前提のため永続ユーザモデルは外部公開しない想定。必要なら内部 user テーブルを追加可能。
// =============================

/// 掲示板カテゴリ
model BoardCategory {
  id          String  @id @default(uuid()) @db.Uuid
  name        String  @db.VarChar(255)
  description String? @db.Text
  sortOrder   Int     @default(0) // 表示順

  boards Board[]

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  @@index([sortOrder])
  @@schema("fumimi_channel")
}

/// 掲示板 (板)
model Board {
  // key を主キーとする (自然キー)。URL 及び参照用。
  key         String  @id @db.VarChar(64)
  title       String  @db.VarChar(255)
  description String  @db.Text
  isReadOnly  Boolean @default(false) // true の間は新規スレ・投稿禁止 (閲覧のみ)

  categoryId String        @db.Uuid
  category   BoardCategory @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  threads Thread[]

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  @@index([categoryId])
  @@schema("fumimi_channel")
}

enum ThreadStatus {
  OPEN
  CLOSED
  ARCHIVED

  @@schema("fumimi_channel")
}

/// スレッド
model Thread {
  // uuid v4
  id        String       @id @default(uuid()) @db.Uuid
  boardKey  String       @db.VarChar(64)
  board     Board        @relation(fields: [boardKey], references: [key], onDelete: Cascade)
  title     String       @db.VarChar(255)
  status    ThreadStatus @default(OPEN)
  // bump 用: 非 sage 投稿で手動更新 (サービスロジックで updatedAt = now() 再保存)
  updatedAt DateTime     @default(now()) @db.Timestamptz(6)
  createdAt DateTime     @default(now()) @db.Timestamptz(6)

  posts Post[]

  @@index([boardKey, updatedAt])
  @@index([status])
  @@schema("fumimi_channel")
}

/// 投稿 (レス)
model Post {
  // uuid v4
  id       String @id @default(uuid()) @db.Uuid
  threadId String @db.Uuid
  thread   Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  body      String  @db.Text
  name      String? @db.VarChar(255) // 投稿者名 (オプショナル、未入力時は匿名扱い)
  ipAddress String  @db.VarChar(45) // IPv4/IPv6 対応 (IPv6 は最大45文字)

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  @@index([threadId, createdAt])
  @@schema("fumimi_channel")
}
