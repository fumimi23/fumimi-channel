generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================
// モデル設計 (匿名掲示板)
// ルーティング仕様: apps/backend/src/routing.md を基礎に定義
// 匿名前提のため永続ユーザモデルは外部公開しない想定。必要なら内部 user テーブルを追加可能。
// =============================

/// 掲示板 (板)
model Board {
  // key を主キーとする (自然キー)。URL 及び参照用。
  key         String  @id @db.VarChar(64)
  title       String
  description String  @db.Text
  isReadOnly  Boolean @default(false) // true の間は新規スレ・投稿禁止 (閲覧のみ)

  threads Thread[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ThreadStatus {
  OPEN
  CLOSED
  ARCHIVED
}

/// スレッド
model Thread {
  // uuid v4
  id        String       @id @default(uuid()) @db.Uuid
  boardKey  String       @db.VarChar(64)
  board     Board        @relation(fields: [boardKey], references: [key], onDelete: Cascade)
  title     String
  status    ThreadStatus @default(OPEN)
  // bump 用: 非 sage 投稿で手動更新 (サービスロジックで updatedAt = now() 再保存)
  updatedAt DateTime     @default(now()) @db.Timestamptz(6)
  createdAt DateTime     @default(now()) @db.Timestamptz(6)

  posts Post[]

  @@index([boardKey, updatedAt])
  @@index([status])
}

/// 投稿 (レス)
model Post {
  // uuid v4
  id       String @id @default(uuid()) @db.Uuid
  threadId String
  thread   Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  body String @db.Text

  attachments Attachment[]

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  @@index([threadId, createdAt])
}

/// ファイル添付 (画像など)
model Attachment {
  id         String   @id @default(cuid())
  postId     String
  post       Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  fileName   String
  mimeType   String
  size       Int
  width      Int? // 画像なら
  height     Int?
  sha256     String? // 重複排除用
  storageKey String // オブジェクトストレージキー / パス
  createdAt  DateTime @default(now())

  @@index([postId])
  @@index([sha256])
}
